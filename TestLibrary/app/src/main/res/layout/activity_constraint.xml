<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_red_pot"
        app:layout_constraintCircle="@id/icon"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="50dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#656645"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toStartOf="@id/iv2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#abfeff"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toStartOf="@id/iv3"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@id/iv1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#656645"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toEndOf="@id/iv2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_gravity_bg"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@id/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv1" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/icon_add"
        app:layout_constraintBottom_toBottomOf="@id/iv_gravity_bg"
        app:layout_constraintEnd_toStartOf="@id/tv_name"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/iv_gravity_bg"
        app:layout_constraintTop_toTopOf="@id/iv_gravity_bg" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/iv_gravity_bg"
        app:layout_constraintEnd_toEndOf="@id/iv_gravity_bg"
        app:layout_constraintStart_toEndOf="@id/iv_add"
        app:layout_constraintTop_toTopOf="@id/iv_gravity_bg" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="iv_add1,tv_name1"
        app:flow_firstHorizontalStyle="spread_inside"
        app:layout_constraintBottom_toBottomOf="@id/iv_flow_bg"
        app:layout_constraintEnd_toEndOf="@id/iv_flow_bg"
        app:layout_constraintStart_toStartOf="@id/iv_flow_bg"
        app:layout_constraintTop_toTopOf="@id/iv_flow_bg" />

    <ImageView
        android:id="@+id/iv_flow_bg"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toTopOf="@id/iv_gravity_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv1" />

    <ImageView
        android:id="@+id/iv_add1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/icon_add" />

    <TextView
        android:id="@+id/tv_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/view1"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="@string/hello"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_gravity_bg" />

    <TextView
        android:id="@+id/view2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        app:layout_constraintBaseline_toBaselineOf="@id/view1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/view1"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>